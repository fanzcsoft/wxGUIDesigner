<class name="wxScrolledWindow" type="container">
    <description>Scrolled window derived from wxPanel.</description>
    <inherits>
        <class>wxPanel</class>
        <class>wxWindow</class>
    </inherits>
    <children>
        <class name="control" max="-1"/>
        <class type="sizer"   max="1"/>
    </children>
    <name label="Name">
        <value>m_scrollWnd</value>
    </name>
    <style label="Style">
        <flag name="wxRETAINED">
            <description>Uses a backing pixmap to speed refreshes. Motif only.</description>
        </flag>
        <flag name="wxSB_VERTICAL">
            <description>Specifies a vertical scrollbar.</description>
        </flag>
    </style>
    <size name="scrollrate" label="Scroll rate">
        <description>Scroll rate in x and y directions (default: not set; required if the window has a sizer child).</description>
    </size>
</class>