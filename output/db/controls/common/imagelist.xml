<class name="wxImageList" xrc="imagelist">
    <parents>
        <class>wxChoicebook</class>
        <class>wxListbook</class>
        <class>wxListCtrl</class>
        <class>wxNotebook</class>
        <class>wxTreebook</class>
        <class>wxTreeCtrl</class>
    </parents>
    <bitmap>
        <description>Adds a new image by keeping its optional mask bitmap.</description>
    </bitmap>
    <bool name="mask">
        <value>1</value>
        <description>If masks should be created for all images (default: true).</description>
    </bool>
    <size>
        <description>The size of the images in the list (default: the size of the first bitmap).</description>
    </size>
</class>