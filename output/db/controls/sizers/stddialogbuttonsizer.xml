<classes>
    <class name="wxStdDialogButtonSizer" type="sizer">
        <inherits>
            <class>wxSizer</class>
        </inherits>
        <children>
            <class name="button" max="-1"/>
        </children>
        <name label="Name">
            <value>sdbSizer</value>
        </name>
        <text name="label">
            <description>Label to be used for the static box around the sizer (required).</description>
        </text>
    </class>

    <class name="button" type="item">
        <children>
            <class name="wxButton" max="1"/>
        </children>
    </class>
</classes>