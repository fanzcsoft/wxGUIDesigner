<classes>
    <class name="wxGridBagSizer" type="layout">
        <inherits>
           <class>wxFlexGridSizer</class>
        </inherits>
        <children>
            <class name="gbsizeritem"  max="-1"/>
        </children>
        <name>gbSizer</name>
    </class>

    <class name="gbsizeritem" type="item">
        <inherits>
            <class>sizeritembase</class>
        </inherits>
        <point name="cellpos" label="Cell position">
            <description>Position, see wxGBSizerItem::SetPos() (required).</description>
        </point>
        <size name="cellspan" label="Cell span">
            <description>Span, see wxGBSizerItem::SetSpan() (required).</description>
        </size>
    </class>
</classes>