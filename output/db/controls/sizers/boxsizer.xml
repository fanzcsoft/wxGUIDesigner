<class name="wxBoxSizer" type="sizer">
    <inherits>
        <class>wxSizer</class>
    </inherits>
    <children>
        <class name="sizeritem" max="-1"/>
        <class name="spacer"    max="-1"/>
    </children>
    <name label="Name">
        <value>boxSizer</value>
    </name>
    <style name="orient" label="Orientation">
        <description>Sizer orientation, "wxHORIZONTAL" or "wxVERTICAL" (default: wxHORIZONTAL).</description>
        <flag name="wxHORIZONTAL"/>
        <flag name="wxVERTICAL"/>
     </style>
</class>