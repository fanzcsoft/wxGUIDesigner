<class name="wxGridSizer">
    <class name="wxSizer"/>
    <properties>
        <name>gridSizer</name>
        <int name="rows ">
            <description>Number of rows in the grid (default: 0 - determine automatically).</description>
        </int>
        <int name="cols" label="Columns">
            <description>Number of columns in the grid (default: 0 - determine automatically).</description>
        </int>
        <int name="vgap" label="Vertical gap">
            <description>Vertical gap between children (default: 0).</description>
        </int>
        <int name="hgap" label="Horizontal gap">
            <description>Horizontal gap between children (default: 0).</description>
        </int>
    </properties>
</class>