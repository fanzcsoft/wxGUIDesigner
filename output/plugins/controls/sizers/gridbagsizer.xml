<class name="gbsizeritem">
    <class name="sizeritembase"/>
    <properties>
        <position name="cellpos" label="Cell position">
            <description>Position, see wxGBSizerItem::SetPos() (required).</description>
        </position>
        <size name="cellspan" label="Cell span">
            <description>Span, see wxGBSizerItem::SetSpan() (required).</description>
        </size>
    </properties>
</class>

<class name="wxGridBagSizer">
    <class name="wxFlexGridSizer"/>
    <children>
        <class name="gbsizeritem"/>
    </children>
    <properties>
        <name>boxSizer</name>
    </properties>
</class>